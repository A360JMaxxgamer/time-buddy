@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="true"/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<Fluxor.Blazor.Web.StoreInitializer/>

<MudLayout Class="d-flex flex-column ma-3" Style="height: 90vh">
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Edge="Edge.Start" Href="/"/>
        <MudText Typo="Typo.h5" Class="ml-3">Time Buddy</MudText>
    </MudAppBar>

    <MudMainContent Class="d-flex justify-left  ">
        @Body
    </MudMainContent>
    <MudItem Class="d-flex justify-center align-content-stretch">
        <Timer/>
    </MudItem>
</MudLayout>